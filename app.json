{
  "expo": {
    "name": "LTP Player",
    "slug": "ltp-turf-players",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ltp.player",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby turfs"
      }
    },
    "android": {
      "package": "com.ltp.player",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow LTP Player to use your location to find nearby turfs."
        }
      ]
    ]
  }
}
