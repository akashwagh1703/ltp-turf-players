{
  "expo": {
    "name": "LTP Player",
    "slug": "ltp-turf-players",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ltp.player",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby turfs"
      }
    },
    "android": {
      "package": "com.ltp.player",
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "./android/app/src/main/res/xml/network_security_config.xml",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow LTP Player to use your location to find nearby turfs."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "28eb5ec5-6c24-4c2a-8c80-f49a33926cdc"
      }
    }
  }
}
